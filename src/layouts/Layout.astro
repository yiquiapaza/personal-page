---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
interface Props {
    title: string;
    page: string;
}
const { title, page } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />

        <link rel="icon" type="image/x-icon" href="/images/aricon.png" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="/css/style.css" rel="stylesheet" />
        <title>{title}</title>
    </head>

    <body>
        <main
            class="light:bg-background light:text-text flex min-h-screen flex-col justify-between dark:bg-background dark:text-text"
        >
            <Header headerName={page} />
            <slot />
            <Footer />
        </main>
    </body>
</html>
